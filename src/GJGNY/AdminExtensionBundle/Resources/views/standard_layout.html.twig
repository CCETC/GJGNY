<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

        {% block stylesheets %}
            <!-- jQuery code -->
            <link rel="stylesheet" href="{{ asset('bundles/sonatajquery/themes/flick/jquery-ui-1.8.6.custom.css') }}" type="text/css" media="all" />
           
            <!-- blueprint code -->
            <link rel="stylesheet" href="{{ asset('bundles/sonatablueprint/screen.css') }}" type="text/css" media="screen, projection">
            <link rel="stylesheet" href="{{ asset('bundles/sonatablueprint/print.css') }}" type="text/css" media="print">
            <!--[if lt IE 8]><link rel="stylesheet" href="{{ asset('bundles/sonatablueprint/ie.css') }}" type="text/css" media="screen, projection"><![endif]-->

            <!-- base application asset -->
            <link rel="stylesheet" href="{{ asset('bundles/sonataadmin/css/layout.css') }}" type="text/css" media="all">
            <link rel="stylesheet" href="{{ asset('bundles/sonataadmin/css/colors.css') }}" type="text/css" media="all">
            <link rel="stylesheet" href="{{ asset('bundles/adminextension/css/customization.css') }}" type="text/css" media="all">
        
            <link rel="stylesheet" href="{{ asset('styles/fosUser.css') }}" type="text/css" media="all">
            <link rel="stylesheet" href="{{ asset('styles/framework.css') }}" type="text/css" media="all">
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('bundles/sonatajquery/jquery-1.4.4.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/sonatajquery/jquery-ui-1.8.6.custom.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/sonatajquery/jquery-ui-i18n.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/sonataadmin/qtip/jquery.qtip-1.0.0-rc3.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/sonataadmin/jquery/jquery.form.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/sonataadmin/base.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/adminextension/js/events.js') }}" type="text/javascript"></script>
            
        {% endblock %}

        <title>
            {% block title %} Green Jobs Green New York | Lead Data Tool
                {% if action is defined %}
                    -
                    {% for label, uri in admin.breadcrumbs(action) %}
                        {% if not loop.first  %}
                            &gt;
                        {% endif %}
                        {{ label }}
                    {% endfor %}
                {% endif %}
            {% endblock %}
        </title>
    </head>
    <body>

        {# initialize block value #}
        {% set preview      = block('preview') %}
        {% set form         = block('form') %}
        {% set view         = block('view') %}
        {% set list_table   = block('list_table') %}
        {% set list_filters = block('list_filters') %}
        {% set side_menu    = block('side_menu') %}
        {% set content      = block('content') %}
        {% set page_description      = block('page_description') %}


        <div class="container">
            {% if usingIE6 is defined and usingIE6 == true %}
                <div id="" class="adminMessage span-24">
                    You are using an outdated version of internet explorer.
                    Because of security and performance issues, it is recommended that you upgrade to a modern browser.
			<br/>	
                    		 <a href="http://www.mozilla.com"><img src="{{ asset('images/browsers/firefox.gif') }}" /></a>
				 <a href='http://www.google.com/chrome'><img src="{{ asset('images/browsers/chrome.gif') }}" /></a>
				 <a href="http://windows.microsoft.com/en-us/internet-explorer/products/ie/home"><img src="{{ asset('images/browsers/ie.gif') }}" /></a>
				 <a href='http://www.opera.com'><img src="{{ asset('images/browsers/opera.gif') }}" /></a>
				 <a href='http://www.apple.com/safari/'><img src="{{ asset('images/browsers/safari.gif') }}" /></a> 
                </div>

            {% endif %}

            {% if app.session.hasFlash('adminMessage') %}
                <div class="adminMessage span-24">
                    {{ app.session.flash('adminMessage') }}
                </div>
            {% endif %}


            {% if app.session.hasFlash('adminErrorMessage') %}
                <div class="adminErrorMessage span-24">
                    {{ app.session.flash('adminErrorMessage') }}
                </div>
            {% endif %}

            <div class="span-24 last header">
                     <div class="logo">
                        <h2><a href="{{ url('sonata_admin_dashboard') }}">Green Jobs Green New York</a></h2>
                        <h3><a href="{{ url('sonata_admin_dashboard') }}">Data Tool</a></h3>
                        {% if action is defined %}
                            <a href="{{ url('sonata_admin_dashboard') }}" class="dashboardLink"><< Dashboard</a><br/>
                        {% endif %}

                    </div>
                   <div id="headerMenu">
                        <a href="{{ url('sonata_admin_dashboard') }}">Dashboard</a>
                        {% if is_granted('ROLE_USER') %}
                            Logged in as {{ app.user }} <a href="{{ url('fos_user_profile_show') }}">(edit)</a> <a href="{{ url('fos_user_security_logout') }}">Log out</a>
                        {% else %}
                            <a href="{{ url('fos_user_security_login') }}">Login</a>
                            <a href="{{ url('fos_user_registration_register') }}">Register</a>
                        {% endif %}
                        <a class="last" href="{{ url('help') }}">Help</a>
                   </div>
                    {% if groups is defined and action is defined %}
                        {% for groupname, group in groups %}
                                <div id="headerMenu">
                                {% for item in group %}
                                   {% if ((item.classNameLabel == 'Users' and  is_granted('ROLE_ADMIN')) or item.classNameLabel != 'Users') %}
        
                                        <a
                                        class="    
                                        {% if loop.last %}last {% endif %}
                                        "        
                                        href="{{ item.generateUrl('list') }}">{{ item.classnameLabel }}</a>
                                   {% endif %}
                                {% endfor %}
                                </div>
                        {% endfor %}
                     {% endif %}
                 
              {#  <div class="span-4 last">
                    {% block user_panel %}Add here logout option / user options{% endblock %}
                </div> #}
            </div>

            <div class="span-24 last content clear">
                <div class="right">
                    {% block actions %}{% endblock %}
                </div>

                <div class="sonata-ba-breadcrumbs">
                    <h1>
                    {% block breadcrumb %}
                        {% if action is defined %}
                            {% for label, uri in admin.breadcrumbs(action) %}
                                {% if not loop.first  %}
                                    &gt;
                                {% endif %}
                                <a href="{{ uri }}">
                                    {% if admin.classnameLabel == label %}
                                        <img src="{{ asset('bundles/adminextension/images/' ~ admin.classname ~ '.png') }}" />
                                    {%endif%}
                                    {{ label }}
                                </a>
                            {% endfor %}
                        {% endif %}
                    {% endblock %}
                    </h1>
                </div>
            </div>
            
			{% block page_description %}{% endblock %}

            {% if preview is not empty %}
                <div class="span-24 last content clear">
                    <div class="sonata-ba-preview">{{ preview|raw }}</div>
                </div>
            {% endif %}
            
            {% if app.session.hasFlash('pageMessage') %}
                <div class="content adminMessage span-24">
                    {{ app.session.flash('pageMessage') }}
                </div>
            {% endif %}


            {% if app.session.hasFlash('pageErrorMessage') %}
                <div class="adminErrorMessage span-24">
                    {{ app.session.flash('pageErrorMessage') }}
                </div>
            {% endif %}
            

            <div class="span-24 last content clear">

                {% if side_menu is not empty %}
                        <div class="span-4">
                            <div class="sonata-ba-side-menu">{{ side_menu|raw }}</div>
                        </div>
                        <div class="span-18 last content">
                {% endif %}

                    {% if content is not empty %}
                        <div class="sonata-ba-content">{{ content|raw }}</div>
                    {% endif %}

                    {% if view is not empty %}
                        <div class="sonata-ba-view">{{ view|raw }}</div>
                    {% endif %}

                    {% if form is not empty %}
                        <div class="sonata-ba-form">{{ form|raw }}</div>
                    {% endif %}

                    {% if list_table is not empty or list_filters is not empty %}
                        {% if side_menu is not empty %}
                            <div class="sonata-ba-list">
                                <div class="span-18">
                                    {{ list_filters|raw }}
                                </div>
                                <div class="span-18 last">
                                    {{ list_table|raw }}
                                </div>
                            </div>
                        {% else %}
                            <div class="sonata-ba-list">
                                <div class="span-24">
                                    {{ list_filters|raw }}
                                </div>
                                <div class="span-24 last">
                                    {{ list_table|raw }}
                                </div>
                            </div>
                        {% endif %}
                    {% endif %}

                {% if side_menu is not empty %}
                    </div>
                {% endif %}

            </div>

        </div>
    </body>
</html>

